<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".view.activity.SplashActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/textView_AgreeAndContinue">

        <LinearLayout
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">


            <com.schoolshieldchild.view.custom_controls.TextView_Medium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/welcometext"
                android:textColor="#fff"
                android:textSize="22dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/logo" />

            <com.schoolshieldchild.view.custom_controls.TextView_Regular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="@string/welcomeAgreetext"
                android:textColor="#fff"
                android:textSize="15dp" />

            <com.schoolshieldchild.view.custom_controls.TextView_Regular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="@string/termsofservices"
                android:textColor="#6c6cff"
                android:textSize="15dp" />
        </LinearLayout>
    </RelativeLayout>

    <com.schoolshieldchild.view.custom_controls.TextView_Regular
        android:id="@+id/textView_AgreeAndContinue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#20ffffff"
        android:gravity="center"
        android:padding="15dp"
        android:text="@string/agreeandcontinue"
        android:textColor="#fff"
        android:textSize="18dp" />


</RelativeLayout>
